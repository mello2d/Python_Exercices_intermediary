vetor = []
numero = -1
while True:
    try:
        numero = int(input("Digite um número (0 para sair): "))
        vetor.append(numero)
    except:
        print("Por favor, informe apenas números.")
    if numero == 0:
        break
#vetor.pop() elimina o ultimo numero do vetor
soma = sum(vetor)
quantidade = len(vetor)

print("Somatório dos números:", soma)
print("Quantidade de números:", quantidade)

